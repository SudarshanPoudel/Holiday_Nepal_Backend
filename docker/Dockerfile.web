FROM python:3.11-slim

WORKDIR /app

# Install unzip and other dependencies
RUN apt-get update && apt-get install -y unzip curl

# Upgrade pip and setuptools for better reliability
RUN pip install --upgrade pip setuptools

# Copy requirements first to leverage Docker cache
COPY requirements.txt .

# Add retry + longer timeout to pip install (split torch)
RUN grep -v torch requirements.txt > requirements.txt && \
    pip install --timeout 120 --retries 10 --no-cache-dir -r requirements.txt

# Copy rest of the code
COPY . .

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]
